{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },

  "Database": {
    "Provider": "PostgreSQL"
  },

  "Storage": {
    "Provider": "Local"
  },

  "LocalStorage": {
    "Path": "/tmp/sharesafely-files"
  },

  "SasLink": {
    "DefaultExpirationMinutes": 60,
    "MaxExpirationMinutes": 1440
  },

  "FileValidation": {
    "MaxFileSizeMB": 50,
    "AllowedExtensions": [ ".pdf", ".docx", ".xlsx", ".png", ".jpg", ".jpeg", ".zip" ]
  },

  "Authentication": {
    "ApiKey": {
      "Enabled": false
    }
  },

  "Cors": {
    "AllowedOrigins": [
      "*"
    ]
  }
}
